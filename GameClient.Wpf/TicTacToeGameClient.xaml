<UserControl x:Class="GameClient.Wpf.TicTacToeGameClient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Margin="8">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- 3x3 board -->
		<UniformGrid Grid.Row="0"
					 Rows="3"
					 Columns="3"
					 x:Name="BoardGrid">
			<!-- Row 0 -->
			<Button x:Name="Cell00"
					Tag="0,0"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>
			<Button x:Name="Cell01"
					Tag="0,1"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>
			<Button x:Name="Cell02"
					Tag="0,2"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>

			<!-- Row 1 -->
			<Button x:Name="Cell10"
					Tag="1,0"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>
			<Button x:Name="Cell11"
					Tag="1,1"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>
			<Button x:Name="Cell12"
					Tag="1,2"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>

			<!-- Row 2 -->
			<Button x:Name="Cell20"
					Tag="2,0"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>
			<Button x:Name="Cell21"
					Tag="2,1"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>
			<Button x:Name="Cell22"
					Tag="2,2"
					Click="Cell_Click"
					FontSize="32"
					Margin="4"/>
		</UniformGrid>

		<!-- Status area -->
		<StackPanel Grid.Row="1"
				Margin="0,8,0,0">
			<TextBlock x:Name="StatusText"
					   FontWeight="Bold"
					   Text="Waiting for game..."/>
			<TextBlock x:Name="TurnText"
					   Margin="0,4,0,0"
					   FontStyle="Italic"/>
		</StackPanel>
	</Grid>
</UserControl>
