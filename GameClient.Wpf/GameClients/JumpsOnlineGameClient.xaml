<UserControl x:Class="GameClient.Wpf.GameClients.JumpsOnlineGameClient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
			 mc:Ignorable="d"
			 Focusable="True"
			 Background="Transparent">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Top HUD -->
		<Border Grid.Row="0"
				Padding="8"
				Margin="0,0,0,4"
				Background="#222"
				CornerRadius="4">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<StackPanel Orientation="Horizontal"
						>
					<TextBlock x:Name="RoomText"
							   Foreground="White"
							   FontSize="14"
							   Text="Room: -"/>

					<TextBlock x:Name="PhaseText"
							   Foreground="White"
							   FontSize="14"
							   Text="Phase: Lobby"/>

					<TextBlock x:Name="LevelText"
							   Foreground="White"
							   FontSize="14"
							   Text="Level: 1"/>

					<TextBlock x:Name="ScrollSpeedText"
							   Foreground="White"
							   FontSize="14"
							   Text="Speed: 0"/>

					<TextBlock x:Name="CountdownText"
							   Foreground="White"
							   FontSize="14"
							   Text="Countdown: -"/>
				</StackPanel>

				<StackPanel Grid.Column="1"
							Orientation="Horizontal"
							HorizontalAlignment="Right"
							>
					<Button x:Name="StartButton"
							Content="Start Round"
							Margin="4,0"
							Padding="10,4"
							Click="StartButton_Click"/>

					<Button x:Name="RestartButton"
							Content="Restart"
							Margin="4,0"
							Padding="10,4"
							Click="RestartButton_Click"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Game surface -->
		<Border Grid.Row="1"
				Margin="0,0,0,4"
				BorderBrush="#444"
				BorderThickness="1"
				CornerRadius="4"
				Background="#111">
			<Grid>
				<skia:SKElement x:Name="GameSurface"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Stretch"
								PaintSurface="GameSurface_PaintSurface"/>
			</Grid>
		</Border>

		<!-- Bottom: per-player info + status -->
		<Border Grid.Row="2"
				Padding="6"
				Background="#202020"
				CornerRadius="4">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*"/>
					<ColumnDefinition Width="3*"/>
				</Grid.ColumnDefinitions>

				<StackPanel Orientation="Horizontal"
							>
					<StackPanel>
						<TextBlock Text="P1"
								   Foreground="#66A3FF"
								   FontWeight="Bold"
								   FontSize="13"/>
						<TextBlock x:Name="P1CoinsText"
								   Foreground="White"
								   Text="Coins: -"/>
						<TextBlock x:Name="P1StateText"
								   Foreground="White"
								   Text="State: -"/>
					</StackPanel>

					<StackPanel>
						<TextBlock Text="P2"
								   Foreground="#7DFF7D"
								   FontWeight="Bold"
								   FontSize="13"/>
						<TextBlock x:Name="P2CoinsText"
								   Foreground="White"
								   Text="Coins: -"/>
						<TextBlock x:Name="P2StateText"
								   Foreground="White"
								   Text="State: -"/>
					</StackPanel>

					<StackPanel>
						<TextBlock Text="P3"
								   Foreground="#FF80FF"
								   FontWeight="Bold"
								   FontSize="13"/>
						<TextBlock x:Name="P3CoinsText"
								   Foreground="White"
								   Text="Coins: -"/>
						<TextBlock x:Name="P3StateText"
								   Foreground="White"
								   Text="State: -"/>
					</StackPanel>
				</StackPanel>

				<TextBlock x:Name="StatusText"
						   Grid.Column="1"
						   HorizontalAlignment="Right"
						   VerticalAlignment="Center"
						   Foreground="White"
						   FontSize="14"
						   Text="Waiting in lobby..."/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
