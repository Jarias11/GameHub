<UserControl x:Class="GameClient.Wpf.GameClients.WarGameClient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="400"
			 d:DesignWidth="700"
			 MinHeight="500">
	<Grid Margin="8">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Top controls: side selection + status -->
		<StackPanel Grid.Row="0"
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Margin="0,0,0,8">
			<TextBlock Text="Choose your side:"
					   Margin="0,0,8,0"
					   VerticalAlignment="Center"
					   Foreground="{DynamicResource Brush.TextPrimary}"/>

			<Button x:Name="LeftSideButton"
					Content="Left"
					Width="80"
					Margin="0,0,4,0"
					Click="LeftSideButton_Click"
					Style="{StaticResource NeonButton}"/>

			<Button x:Name="RightSideButton"
					Content="Right"
					Width="80"
					Margin="4,0,12,0"
					Click="RightSideButton_Click"
					Style="{StaticResource NeonButton}"/>
			<Button x:Name="ShuffleButton"
					Content="Shuffle My Deck"
					Width="140"
					Margin="12,0,0,0"
					Click="ShuffleButton_Click"
					Style="{StaticResource NeonButton}"
					Visibility="Collapsed"/>

			<TextBlock x:Name="SideStatusText"
					   Text="No side selected."
					   VerticalAlignment="Center"
					   Foreground="{DynamicResource Brush.TextSecondary}"/>
		</StackPanel>

		<!-- SkiaSharp render surface for all card visuals -->
		<skia:SKElement x:Name="SkSurface"
						Grid.Row="1"
						PaintSurface="SkSurface_PaintSurface"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						MouseDown="SkSurface_MouseDown"/>

		<!-- Bottom status text -->
		<TextBlock x:Name="BottomStatusText"
				   Grid.Row="2"
				   Margin="0,8,0,0"
				   HorizontalAlignment="Center"
				   Foreground="{DynamicResource Brush.TextSecondary}"
				   Text="Click Left or Right to start."/>
	</Grid>
</UserControl>
