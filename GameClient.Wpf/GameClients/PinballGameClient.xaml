<UserControl x:Class="GameClient.Wpf.GameClients.PinballGameClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             Focusable="True"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             Background="Black">

    <Grid>
        <!-- Main game surface -->
        <skia:SKElement x:Name="Surface" PaintSurface="Surface_PaintSurface" MinHeight = "700" MinWidth = "500"/>

        <!-- Optional lightweight overlay (not required; we still draw HUD in Skia) -->
        <Border HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10" Padding="8"
                Background="#66000000" CornerRadius="8">
            <StackPanel>
                <TextBlock x:Name="HudText"
                           Foreground="White"
                           FontSize="14"
                           Text="Pinball"/>
                <TextBlock x:Name="HudHelp"
                           Foreground="#CCFFFFFF"
                           FontSize="12"
                           Text="A/Left = Left Flipper | D/Right = Right Flipper | Hold Space = Plunger"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
