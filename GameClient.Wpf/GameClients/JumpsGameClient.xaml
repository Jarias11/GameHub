<UserControl x:Class="GameClient.Wpf.GameClients.JumpsGameClient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Focusable="True"
			 Loaded="UserControl_Loaded">

	<Grid Background="#111111">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Header / instructions -->
		<StackPanel Orientation="Horizontal"
					Margin="8">
			<TextBlock Text="Jumps"
					   FontSize="20"
					   FontWeight="Bold"
					   Foreground="White"/>
			<TextBlock Text=" — Space to jump, ←/A or →/D to choose direction"
					   Margin="8,0,0,0"
					   VerticalAlignment="Center"
					   Foreground="LightGray"
					   FontSize="12"/>
		</StackPanel>

		<!-- Game area -->
		<Border Grid.Row="1"
				Margin="8"
				BorderBrush="#444444"
				BorderThickness="1"
				CornerRadius="4"
				Background="#222222">
			<!-- Fixed-size canvas for simpler math -->
			<Canvas x:Name="GameCanvas"
					Width="360"
					Height="480"
					Background="#111111"/>
		</Border>
	</Grid>
</UserControl>
