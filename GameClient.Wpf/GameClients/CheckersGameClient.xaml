<UserControl x:Class="GameClient.Wpf.GameClients.CheckersGameClient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
			 MinWidth="500"
			 MinHeight="500">
	<Grid Margin="8">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

 		<StackPanel Grid.Row="0"
					Orientation="Horizontal"
					HorizontalAlignment="Stretch"
					Margin="0,0,0,8">
			<StackPanel Orientation="Vertical">
				<TextBlock Text="Checkers"
						   FontSize="20"
						   FontWeight="Bold"
						   Margin="0,0,0,4"/>
				<TextBlock x:Name="StatusText"
						   Text="Waiting for server..."
						   FontSize="14"/>
				<TextBlock x:Name="SideText"
						   Text="Side: -"
						   FontSize="12"
						   Margin="0,2,0,0"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal"
						HorizontalAlignment="Right"
						Margin="12,0,0,0">
				<Button x:Name="ResignButton"
						Content="Resign"
						Margin="8,0,0,0"
						Padding="12,4"
						Click="ResignButton_Click"/>
			</StackPanel>
		</StackPanel>

		<!-- Skia board -->
		<Border Grid.Row="1"
				CornerRadius="6"
				BorderThickness="1"
				BorderBrush="#444"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				MinWidth="450"
				MinHeight="450">
			<skia:SKElement x:Name="BoardSurface"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							MinWidth="450"
							MinHeight="450"
							PaintSurface="BoardSurface_OnPaintSurface"
							MouseMove="BoardSurface_OnMouseMove"
							MouseLeftButtonDown="BoardSurface_OnMouseLeftButtonDown"/>
		</Border>

		<!-- Bottom helper text -->
		<TextBlock Grid.Row="2"
				   x:Name="HintText"
				   Margin="0,8,0,0"
				   FontSize="12"
				   Text="Click a piece to select it, then click a highlighted square to move."
				   TextWrapping="Wrap"/>
	</Grid>
</UserControl>