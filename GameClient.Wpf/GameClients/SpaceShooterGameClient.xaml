<UserControl x:Class="GameClient.Wpf.GameClients.SpaceShooterGameClient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
			 Focusable="True">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="100" />
		</Grid.ColumnDefinitions>

		<!-- Game View -->
		<skia:SKElement x:Name="Canvas"
						Grid.Column="0"
						PaintSurface="Canvas_PaintSurface" />

		<!-- HUD box -->
		<Border Grid.Column="1"
				Margin="12"
				Padding="12"
				CornerRadius="12"
				Background="#221C1C1C"
				BorderBrush="#33FFFFFF"
				BorderThickness="1">
			<StackPanel>
				<TextBlock Text="Space Shooter"
						   FontSize="18"
						   FontWeight="SemiBold"
						   Foreground="White" />

				<TextBlock x:Name="AliveText"
						   Margin="0,10,0,0"
						   FontSize="16"
						   Foreground="White"
						   Text="Alive: 0/0" />

				<TextBlock x:Name="StatusText"
						   Margin="0,10,0,0"
						   Foreground="#CCFFFFFF"
						   TextWrapping="Wrap"
						   Text="WASD/Arrows to move â€¢ Space to shoot" />
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
