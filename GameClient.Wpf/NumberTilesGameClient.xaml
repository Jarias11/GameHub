<UserControl x:Class="GameClient.Wpf.NumberTilesGameClient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Background="#111111"
		  Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Header / Score row -->
		<Grid Grid.Row="0"
			  Margin="0,0,0,12">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<StackPanel Orientation="Vertical">
				<TextBlock Text="2048"
						   FontSize="28"
						   FontWeight="Bold"
						   Foreground="White"/>
				<TextBlock Text="Use WASD or Arrow keys"
						   Margin="0,4,0,0"
						   Foreground="#BBBBBB"
						   FontSize="12"/>
			</StackPanel>

			<StackPanel Grid.Column="1"
						Orientation="Horizontal"
						VerticalAlignment="Center">
				<!-- Score -->
				<Border Background="#333333"
						CornerRadius="6"
						Padding="10,4">
					<StackPanel Orientation="Vertical">
						<TextBlock Text="SCORE"
								   FontSize="10"
								   Foreground="#CCCCCC"
								   HorizontalAlignment="Center"/>
						<TextBlock x:Name="ScoreText"
								   Text="0"
								   FontSize="16"
								   FontWeight="Bold"
								   Foreground="White"
								   HorizontalAlignment="Center"/>
					</StackPanel>
				</Border>

				<!-- New Game -->
				<Button Content="New Game"
						Padding="10,4"
						Click="NewGameButton_Click"/>
			</StackPanel>
		</Grid>

		<!-- Board -->
		<Grid Grid.Row="1">
			<Viewbox Stretch="Uniform"
					 HorizontalAlignment="Center"
					 VerticalAlignment="Center"
					 Margin="0,8,0,0"
					 MaxWidth="500"
					 MaxHeight="500">
				<!-- This border has a fixed base size (square) and will be scaled
			 uniformly by the Viewbox as the window grows/shrinks -->
				<Border x:Name="BoardContainer"
						Width="200"
						Height="200"
						Background="#222222"
						CornerRadius="10"
						Padding="4">
					<UniformGrid x:Name="BoardGrid"
								 Rows="4"
								 Columns="4"
								 Margin="2"/>
				</Border>
			</Viewbox>
		</Grid>

	</Grid>
</UserControl>
